<form class="form-horizontal" role="form">
    <div class="form-group">
        <label class="col-sm-3 control-label">产品字段类型:</label>
        <div class="col-sm-8">
            <select id="productfieldType" class="form-control">
                
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">使用场景:</label>
        <div class="col-sm-8">
            <select id="useScene" class="form-control">
                
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">备注名称:</label>
        <div class="col-sm-8">
            <textarea id="descName" class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">备注内容:</label>
        <div class="col-sm-8">
            <textarea id="descContent" class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">是否使用备注名称:</label>
        <div class="col-sm-8">
            <select id="useDescName" class="form-control">
                <option value="1">是</option>
                <option value="2">否</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-3 control-label">是否使用备注内容:</label>
        <div class="col-sm-8">
            <select id="useDescContent" class="form-control">
                <option value="1">是</option>
                <option value="2">否</option>
            </select>
        </div>
    </div>
</form>